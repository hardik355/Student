<h1> Student All Records </h1>
<%= link_to 'New Regestration', new_register_path %><br><br>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-Mail</th>
        <th>City</th>
        <th>Area </th>
        <th>Mobile No </th>
        <th>Password</th>
    </tr>
    <% @registers.each do |register|%>
        <tr>
        <td><%= register.first_name %></td>
        <td><%= register.last_name %></td>
        <td><%= register.email %></td>
        <td><%= register.city %></td>
        <td><%= register.area %></td>
        <td><%= register.mobile_no %></td>
        <td><%= register.password %></td>
        <td><%= link_to 'show', register_path(register)%></td>
        <td><%= link_to 'edit', edit_register_path(register)%></td>
        <td><%= link_to 'Destroy',register_path(register),
                    method: :"delete",
                    data: {confirm: "Are You Sure"} %> </td> 
        </tr>
        <% end %>
</table>
